<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrossingKitty.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CrossingKitty"
    Title="CrossingKitty">

    <Shell.FlyoutHeader>
        <StackLayout>
            <Label Text="Game menu" FontSize="20" HorizontalOptions="Center"></Label>
        </StackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Home">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Game play">
        <ShellContent ContentTemplate="{DataTemplate local:GamePlayPage}"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Login">
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Register">
        <ShellContent ContentTemplate="{DataTemplate local:RegistrationPage}"></ShellContent>
    </FlyoutItem>


</Shell>
